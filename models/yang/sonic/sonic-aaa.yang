module sonic-aaa {
    namespace "http://github.com/Azure/sonic-aaa";
    prefix sacl;
    yang-version 1.1;

    import ietf-inet-types {
        prefix inet;
    }

    import sonic-common {
        prefix cmn;
    }

    organization
        "SONiC";

    contact
        "SONiC";

    description
        "SONiC AAA";

    revision 2019-11-05 {
        description
            "Initial revision.";
    }

    container sonic-aaa {

        container USER_DB {
            list USER_TABLE {
                key "user tenant";

                leaf user {
                    type string {
                        pattern '[a-z_][a-z0-9_-]*[$]';
                        length 1..31;
                    }
                }

                leaf tenant {
                    type string;
                }

                leaf-list role {
                    type string;
                }
            }

            container PRIVILEGE_TABLE {
                key "role feature";

                leaf role {
                    type string;
                }

                leaf feature {
                    type string;
                }

                leaf permissions {
                    type string;
                }
            }
        }
    }
}
