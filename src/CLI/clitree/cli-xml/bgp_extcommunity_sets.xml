<!DOCTYPE CLISH_MODULE [
]>

<CLISH_MODULE xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
                        http://www.dellemc.com/sonic/XMLSchema/clish.xsd">

   <VIEW
       name="configure-view"
       >

    <COMMAND
        name="bgp extcommunity-list"
        help="Add a extcommunity list entry">
        <PARAM
            name="bgp-subcommands"
            help="BGP subcommands"
            mode="switch"
            ptype="SUBCOMMAND"
            >
            <PARAM
                name="standard"
                help="Add a standard extcommunity list entry"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
                <PARAM
                    name="extcommunity-list-name"
                    help="Communty list name"
                    ptype="STRING"
                    >
                    <PARAM
                        name="standard-subcommands"
                        help="Standard extcommand"
                        ptype="SUBCOMMAND"
                        mode="switch"
                        optional="true"
                        >
                        <PARAM
                            name="rt"
                            help="Route-target"
                            ptype="SUBCOMMAND"
                            mode="subcommand"
                            >
                            <PARAM
                                name="aa"
                                help="Extended community number aa:nn format 0..65535:0..65535"
                                ptype="AA_NN"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="ipaddrnn"
                                help="Extended community number ip-addr"
                                ptype="IPADDR_NN"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="rt-any-all subcommands"
                                help="Any/all command"
                                ptype="SUBCOMMAND"
                                mode="switch"
                                optional="true"
                                >
                                <PARAM
                                    name="any"
                                    help="Any command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                                <PARAM
                                    name="all"
                                    help="All command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                            </PARAM>
                        </PARAM>
                        <PARAM
                            name="soo"
                            help="Route-origin"
                            ptype="SUBCOMMAND"
                            mode="subcommand"
                            >
                            <PARAM
                                name="aa"
                                help="Extended community number aa:nn format 0..65535:0..65535"
                                ptype="AA_NN"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="ipaddrnn"
                                help="Extended community ip_addr"
                                ptype="IPADDR_NN"
                                optional="true"
                                >
                            </PARAM>
                            <PARAM
                                name="so-any-all subcommands"
                                help="Any/all command"
                                ptype="SUBCOMMAND"
                                mode="switch"
                                optional="false"
                                >
                                <PARAM
                                    name="any"
                                    help="Any command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                               </PARAM>
                               <PARAM
                                    name="all"
                                    help="All command"
                                    ptype="SUBCOMMAND"
                                    mode="subcommand"
                                    >
                                </PARAM>
                            </PARAM>
                        </PARAM>
                        <PARAM
                            name="any"
                            help="Any command"
                            ptype="SUBCOMMAND"
                            mode="subcommand"
                            >
                        </PARAM>
                        <PARAM
                            name="all"
                            help="All command"
                            ptype="SUBCOMMAND"
                            mode="subcommand"
                            >
                        </PARAM>
                    </PARAM>
                </PARAM>
            </PARAM>
            <PARAM
                name="expanded"
                help="Add a expanded community list entry"
                ptype="SUBCOMMAND"
                mode="subcommand"
                >
                <PARAM
                    name="extcommunity-list-name"
                    help="Communty list name"
                    ptype="STRING"
                    >
                    <PARAM
                        name="line"
                        help="LINE An ordered list as a regular-expression"
                        ptype="STRING"
                        >
                    </PARAM>
                </PARAM>
            </PARAM>
        </PARAM>
    <ACTION>
        if test "${bgp-subcommands}" = "standard"; then&#xA;
            if test "${standard-subcommands}" = "rt"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_extcommunity_standard ${extcommunity-list-name} ${standard-subcommands} ${__full_line}&#xA;

            elif test "${standard-subcommands}" = "soo"; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_extcommunity_standard ${extcommunity-list-name} ${standard-subcommands} ${__full_line}&#xA;

            else&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_extcommunity_standard ${extcommunity-list-name} ${standard-subcommands} ${__full_line}&#xA;
            fi

        elif test "${bgp-subcommands}" = "expanded"; then&#xA;
            python $SONIC_CLI_ROOT/sonic-cli-bgp-community.py bgp_extcommunity_expanded ${extcommunity-list-name} ${line}&#xA;

        else&#xA;
            builtin="clish_nop"&#xA;
        fi
    </ACTION>
    </COMMAND>
</VIEW>
</CLISH_MODULE> 
