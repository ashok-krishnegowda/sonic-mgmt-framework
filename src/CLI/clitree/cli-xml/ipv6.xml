<!--=======================================================-->
<!--                show ipv6 neighbors                    -->
<!--=======================================================-->
<PTYPE
    name="INTF_TYPE"
    method="select"
    pattern="Ethernet Vlan PortChannel Management(eth)"
    help="Interface type"/>


<VIEW name="enable-view">
    <COMMAND
        help="show IP commands"
        name="show ipv6"
        >
    <ACTION builtin="clish_nop"/>
    </COMMAND>

<!-- show ipv6 neighbors <ipv6-addr> -->
    <COMMAND
        help="show IPv6 neighbors commands"
        name="show ipv6 neighbors">
        <PARAM
            name="neighbors-subcommands"
            help="Neighbors subcommands"
            mode="switch"
            ptype="SUBCOMMAND"
            optional="true">
                <PARAM
                    help="neighbor entry for this IPv6 address"
                    name="ipv6-addr"
                    ptype="IPV6_ADDR"
                    optional="true">
                </PARAM>
        </PARAM>
       <ACTION>
               python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_sonic_neigh_sonic_neigh_neigh_table arp_show.j2 IPv6 ${ipv6-addr}&#xA;
       </ACTION>
    </COMMAND>

<!-- show ipv6 neighbors interface <intf> [summary] -->
    <COMMAND
        help="neighbors entries for this interface"
        name="show ipv6 neighbors interface">
        <PARAM
            name="ifType"
            help=""
            ptype="INTF_TYPE">
            <PARAM
                name="phy-if-id"
                help="Numeric ID for the given interface type"
                ptype="UINT">
                <PARAM
                    help="Summary of neighbors entries"
                    name="summary"
                    ptype="SUBCOMMAND"
                    mode="subcommand"
                    optional="true">
                </PARAM>
            </PARAM>
        </PARAM>
        <ACTION>
            if test "${summary}" = ""; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors arp_show.j2 ${ifType}${phy-if-id} None&#xA;
            else&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv6_neighbors arp_summary_show.j2 ${ifType}${phy-if-id} summary&#xA;
            fi&#xA;
        </ACTION>
    </COMMAND>

<!-- show ipv6 neighbors [mac-address <mac-addr>] -->
    <COMMAND
        help="HW address"
        name="show ipv6 neighbors mac-address">
        <PARAM
            help="48 bit MAC address"
            name="mac-addr"
            ptype="MAC_ADDR">
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_sonic_neigh_sonic_neigh_neigh_table arp_show.j2 IPv6 mac ${mac-addr}&#xA;
        </ACTION>
   </COMMAND>

<!-- show ipv6 neighbors summary -->
    <COMMAND
        help="Summary of neighbors entries"
        name="show ipv6 neighbors summary">
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_sonic_neigh_sonic_neigh_neigh_table arp_summary_show.j2 summary None&#xA;
        </ACTION>
    </COMMAND>
</VIEW>
</CLISH_MODULE>
