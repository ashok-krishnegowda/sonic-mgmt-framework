<!--=======================================================-->
<!--              show ip arp changes                      -->
<!--=======================================================-->
<PTYPE
    name="INTF_TYPE"
    method="select"
    pattern="Ethernet Vlan PortChannel Management(eth)"
    help="Interface type"/>


<VIEW name="enable-view">
    <COMMAND
        help="show IP commands"
        name="show ip"
        >
    <ACTION builtin="clish_nop"/>
    </COMMAND>

<!-- show ip arp <ip-addr> commands -->
    <COMMAND
        help="show ARP commands"
        name="show ip arp">
        <PARAM
            name="arp-subcommands"
            help="ARP subcommands"
            mode="switch"
            ptype="SUBCOMMAND"
            optional="true">
                <PARAM
                    help="ARP entry for this IP address"
                    name="ip-addr"
                    ptype="IP_ADDR"
                    optional="true">
                </PARAM>
        </PARAM>
       <ACTION>
               python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_sonic_neigh_sonic_neigh_neigh_table arp_show.j2 IPv4 ${ip-addr}&#xA;
       </ACTION>
    </COMMAND>

<!-- show ip arp interface <intf> [summary] -->
    <COMMAND
        help="ARP entries for this interface"
        name="show ip arp interface">
        <PARAM
            name="ifType"
            help=""
            ptype="INTF_TYPE">
            <PARAM
                name="phy-if-id"
                help="Numeric ID for the given interface type"
                ptype="UINT">
                <PARAM
                    help="Summary of ARP entries"
                    name="summary"
                    ptype="SUBCOMMAND"
                    mode="subcommand"
                    optional="true">
                </PARAM>
            </PARAM>
        </PARAM>
        <ACTION>
            if test "${summary}" = ""; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_neighbors arp_show.j2 ${ifType}${phy-if-id} None&#xA;
            else&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_neighbors arp_summary_show.j2 ${ifType}${phy-if-id} summary&#xA;
            fi&#xA;
        </ACTION>
    </COMMAND>

<!--- show ip arp [mac-address <mac-addr>] -->
    <COMMAND
        help="HW address"
        name="show ip arp mac-address">
        <PARAM
            help="48 bit MAC address"
            name="mac-addr"
            ptype="MAC_ADDR">
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_sonic_neigh_sonic_neigh_neigh_table arp_show.j2 IPv4 mac ${mac-addr}&#xA;
        </ACTION>
   </COMMAND>

<!-- show ip arp summary -->
    <COMMAND
        help="Summary of ARP entries"
        name="show ip arp summary">
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-arp-neigh.py get_sonic_neigh_sonic_neigh_neigh_table arp_summary_show.j2 summary None&#xA;
        </ACTION>
    </COMMAND>
</VIEW>

<!--=======================================================-->
<!--                Config Interface PHY-MODE              -->
<!--=======================================================-->

<VIEW name="configure-if-view">

    <COMMAND
        name="ip"
        help="Interface Internet Protocol config commands"
    />
    <COMMAND
        name="no ip"
	    help="Interface Internet Protocol config commands"
	>
    </COMMAND>

    <COMMAND
        name="ip address"
        help="IP address" >
        <PARAM
            name="addr"
            help="IP address with mask"
            ptype="IP_ADDR_MASK" />
	<ACTION>python $SONIC_CLI_ROOT/sonic-cli-if.py patch_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_addresses_address_config ${iface} ${addr} </ACTION>
    </COMMAND>

    <COMMAND
        name="no ip address"
	help="Interface Internet Protocol config commands"
	>
	<PARAM
	    name="addr"
            help="IP address"
	    ptype="IP_ADDR" />
    <ACTION>
	    python $SONIC_CLI_ROOT/sonic-cli-if.py delete_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_addresses_address_config_prefix_length ${iface} ${addr}
    </ACTION>
    </COMMAND>
</VIEW>

<!--=======================================================-->
<!--                Config Interface MGMT-MODE              -->
<!--=======================================================-->
<VIEW name="configure-if-mgmt-view">

    <COMMAND
        name="ip"
        help="Interface Internet Protocol config commands"
    />
    <COMMAND
        name="no ip"
        help="Interface Internet Protocol config commands"
	>
    </COMMAND>

    <COMMAND
        name="ip address"
        help="IP address" >
        <PARAM
            name="addr"
            help="IP address with mask"
            ptype="IP_ADDR_MASK" />
        <PARAM name="gwaddr"
            help="Default Gateway address"
            ptype="SUBCOMMAND"
            mode="subcommand"
            optional="true" >
            <PARAM 
                name="gw_addr"
                help="Gateway IP address"
                ptype="IP_ADDR"
                />
        </PARAM>
        <ACTION>
            if test "${gw_addr}" = ""; then&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-if.py patch_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_addresses_address_config ${iface} ${addr}&#xA;
            else&#xA;
                python $SONIC_CLI_ROOT/sonic-cli-if.py patch_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_addresses_address_config ${iface} ${addr} ${gw_addr}&#xA;
            fi&#xA;
        </ACTION>
    </COMMAND>

    <COMMAND
        name="no ip address"
	help="Interface Internet Protocol config commands"
	>
	<PARAM
	    name="addr"
            help="IP address"
	    ptype="IP_ADDR" />
    <ACTION>
        python $SONIC_CLI_ROOT/sonic-cli-if.py delete_openconfig_if_ip_interfaces_interface_subinterfaces_subinterface_ipv4_addresses_address_config_prefix_length ${iface} ${addr}
    </ACTION>
    </COMMAND>
</VIEW>

