<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/org/SONiC/HostAccountManagement">
  <interface name="org.freedesktop.DBus.Introspectable">
    <method name="Introspect">
      <arg direction="out" type="s" />
    </method>
  </interface>

  <!--
      _                             _
     / \   ___ ___ ___  _   _ _ __ | |_ ___
    / _ \ / __/ __/ _ \| | | | '_ \| __/ __|
   / ___ \ (_| (_| (_) | |_| | | | | |_\__ \
  /_/   \_\___\___\___/ \__,_|_| |_|\__|___/

  Invoked from container by translib
  -->
  <interface name="ham.accounts">
      <method name="useradd">
          <arg direction="in"  type="s" name="login"/>         <!-- User's login Name. Same as standard useradd command (see http://man7.org/linux/man-pages/man8/useradd.8.html) -->
          <arg direction="in"  type="s" name="options"/>       <!-- Same as standard useradd command options (see http://man7.org/linux/man-pages/man8/useradd.8.html) -->
          <arg direction="out" type="i" name="exit_value" />
      </method>
      <method name="usermod">
          <arg direction="in"  type="s" name="login"/>         <!-- User's login Name. Same as standard useradd command (see http://man7.org/linux/man-pages/man8/useradd.8.html) -->
          <arg direction="in"  type="s" name="options"/>       <!-- Same as standard useradd command options (see http://man7.org/linux/man-pages/man8/useradd.8.html) -->
          <arg direction="out" type="i" name="exit_value" />
      </method>
      <method name="groupadd">
          <arg direction="in"  type="s" name="group"/>         <!-- Group Name. Same as standard groupadd command (see http://man7.org/linux/man-pages/man8/groupadd.8.html) -->
          <arg direction="in"  type="s" name="options"/>       <!-- Same as standard groupadd command options (see http://man7.org/linux/man-pages/man8/groupadd.8.html) -->
          <arg direction="out" type="i" name="exit_value" />
      </method>
      <method name="groupmod">
          <arg direction="in"  type="s" name="group"/>         <!-- Group Name. Same as standard groupadd command (see http://man7.org/linux/man-pages/man8/groupadd.8.html) -->
          <arg direction="in"  type="s" name="options"/>       <!-- Same as standard groupadd command options (see http://man7.org/linux/man-pages/man8/groupadd.8.html) -->
          <arg direction="out" type="i" name="exit_value" />
      </method>
  </interface>


  <!--
   _   _                        ____                  _
  | \ | | __ _ _ __ ___   ___  / ___|  ___ _ ____   _(_) ___ ___
  |  \| |/ _` | '_ ` _ \ / _ \ \___ \ / _ \ '__\ \ / / |/ __/ _ \
  | |\  | (_| | | | | | |  __/  ___) |  __/ |   \ V /| | (_|  __/
  |_| \_|\__,_|_| |_| |_|\___| |____/ \___|_|    \_/ |_|\___\___|

  Invoked from containers by libnss_ham module
  -->
  <interface name="ham.name_service">
      <method name="getpwnam">
          <arg direction="in"  type="s" name="name"/>
          <arg direction="out" type="(bssuusss)" name="success,pw_name,pw_passwd,pw_uid,pw_gid,pw_gecos,pw_dir,pw_shell" />
      </method>
      <method name="getpwuid">
          <arg direction="in"  type="u" name="uid"/>
          <arg direction="out" type="(bssuusss)" name="success,pw_name,pw_passwd,pw_uid,pw_gid,pw_gecos,pw_dir,pw_shell" />
      </method>
      <method name="getgrnam">
          <arg direction="in"  type="s" name="name"/>
          <arg direction="out" type="(bssuas)" name="success,gr_name,gr_passwd,gr_gid,gr_mem" />
      </method>
      <method name="getgrgid">
          <arg direction="in"  type="u" name="gid"/>
          <arg direction="out" type="(bssuas)" name="success,gr_name,gr_passwd,gr_gid,gr_mem" />
      </method>
      <method name="getspnam">
          <arg direction="in"  type="s" name="name"/>
          <arg direction="out" type="(bssiiiiiiu)" name="success,sp_namp,sp_pwd,sp_lstchg,sp_min,sp_max,sp_warn,sp_inact,sp_expire,sp_flag" />
      </method>
  </interface>

  <!--
  ____       _
 |  _ \  ___| |__  _   _  __ _
 | | | |/ _ \ '_ \| | | |/ _` |
 | |_| |  __/ |_) | |_| | (_| |
 |____/ \___|_.__/ \__,_|\__, |
                         |___/

  Invoked from Host as a debugging aid (see hamctl shell program)
  -->
  <interface name="ham.debug">
      <method name="troff">
          <arg direction="out" type="s" />
      </method>
      <method name="tron">
          <arg direction="out" type="s" />
      </method>
      <method name="show">
          <arg direction="out" type="s" />
      </method>
  </interface>
</node>

